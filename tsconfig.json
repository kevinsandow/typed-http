{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
  }
}
